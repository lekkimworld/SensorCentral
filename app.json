{
    "name": "SensorCentral",
    "description": "App for receiving and displaying sensor readings.",
    "keywords": [
        "iot",
        "sensors"
    ],
    "website": "https://lekkimworld.com/",
    "repository": "https://github.com/lekkimworld/sensorcentral",
    "success_url": "/",
    "env": {
        
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "free"
        }
    },
    "addons": [
        {
            "plan": "heroku-redis:hobby-dev"
        },
        {
            "plan": "heroku-postgresql:hobby-dev"
        },
        {
            "plan": "cloudamqp:lemur"
        },
        {
            "plan": "papertrail:choklad"
        }
    ],
    "environments": {
        "review": {
            "env": {
                "API_JWT_SECRET": {
                    "generator": "secret"
                },
                "SESSION_SECRET": {
                    "generator": "secret"
                },
                "OIDC_CLIENT_ID": "stubOidcClient",
                "OIDC_CLIENT_SECRET": "secretsarehardtokeep",
                "OIDC_PROVIDER_URL": "https://cryptic-dawn-16980.herokuapp.com",
                "OIDC_POST_CLIENT_SECRET": "true"
            },
            "scripts": {
                "postdeploy": "node server-dist/postdeploy/create_database.js && heroku config:set OIDC_REDIRECT_URI=https://${HEROKU_APP_NAME}.herokuapp.com/openid/callback --app ${HEROKU_APP_NAME}"
            },
            "buildpacks": [
                {"url": "heroku/nodejs"},
                {"url": "https://github.com/heroku/heroku-buildpack-cli"}
            ]
        }
    }
}